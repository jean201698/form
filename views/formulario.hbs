

  <form id="form" action="/form" method="post" class="m-2"  novalidate>
    <h4 class="mb-0 d-flex justify-content-center">CADASTRO DE USUARIO</h4>
    <div class="form-row mt-2" >
    
    <div class="col-md-3 mb-3 ">
      <label for="validationTooltip01">Primeiro nome</label>
      <input type="text" class="form-control" id="nome" placeholder="Nome" name="nome">
     
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationTooltip02">Sobrenome</label>
      <input type="text" class="form-control" id="sobrenome" placeholder="Sobrenome" name="sobrenome" >
      
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationTooltip05">CEP</label>
      <input type="text" class="form-control" id="cep" placeholder="CEP" name="cep">
    </div>
  </div>
  
  <div class="form-row">
    <div class="col-md-3 mb-3">
      <label for="validationTooltip03">Cidade</label>
      <input type="text" class="form-control" id="localidade" placeholder="Cidade" name="localidade">
      
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationTooltip04">Estado</label>
      <input type="text" class="form-control" id="uf" placeholder="Estado" name="uf">
     
    </div>

     <div class="col-md-3 mb-3">
      <label for="validationTooltip04">Bairro</label>
      <input type="text" class="form-control" id="bairro" placeholder="Bairro" name="bairro">
     
    </div>
  </div>
<div class="form-row">
  <button class="btn btn-primary col-md-1 p-0" type="submit" id="enviar">Enviar</button>
  <button class="btn btn-dark col-md-1 p-0"><a href="/list" class="btn btn-dark">Listagem</a></button>

</div>
 

</form>


 {{#each erros}}
 <div class="alert alert-danger">
   {{texto}}
 </div>
 {{else}}
 {{/each}}

