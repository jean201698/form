
{{#each valores}}
<div class="m-2">
    <table class="table m-0">
        <thead class="thead-dark col-md-4">
            <tr>

                <th scope="col" class="p-0">NOME</th>
                <th scope="col" class="p-0">SOBRENOME</th>
                <th scope="col" class="p-0">CEP</th>
                <th scope="col" class="p-0">CIDADE</th>
                <th scope="col" class="p-0">UF</th>
                <th scope="col" class="p-0">BAIRRO</th>
               


            </tr>
        </thead>
        <tbody>
            <tr>

                <td>{{nome}}</td>
                <td>{{sobrenome}}</td>
                <td>{{cep}}</td>
                <td>{{localidade}}</td>
                <td>{{uf}}</td>
                <td>{{bairro}}</td>
            
            </tr>
        </tbody>
    </table>

       <form action="/del" method="post">
            <input type="hidden" value="{{id}}" name="id">
            <button type="submit" class="float-right btn btn-danger mb-2 ml-2">Deletar</button>
        </form>
        <form action="/editar" method="post">
            <input type="hidden" value="{{id}}" name="id">
            <a href="#" class=" float-right"><button type="submit" class="btn btn-primary">Editar</button></a>
        </form>
</div>
 {{/each}}